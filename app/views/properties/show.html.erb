<div class="name-container name-pale-blue name-leftbar">
  <h1>Show Property</h1>
</div>

<br>

<div class="card">
  <div class="card-body">
    <h5 class="card-title"><strong>Content:</strong> <%= property.content %></h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><strong>Propertyable:</strong> <%= property.propertyable_id %></li>
    <li class="list-group-item"><strong>Propertyable type:</strong> <%= property.propertyable_type %></li>    
  </ul>
</div>

<br>

<%= link_to 'Edit', edit_property_path(property), class: 'btn btn-sm btn-outline-primary' %>
<%= link_to 'Back', properties_path, class: 'btn btn-sm btn-outline-primary' %>