<div class="index">
  <div class="card mt-4">
    <div class="card-block">
      <h1 class="card-header text-center">Properties</h1>
      <div class="card-body">
        <div class="row justify-content-md-center">
          <div class="col-md-12">

            <div class="table-responsive">
              <table class="table table-striped table-light">
                <thead>
                  <tr>
                    <th>Propertyable</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Activity</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @properties.each do |property| %>
                    <tr>
                      <td><%= property.propertyable_type %></td>
                      <td><%= property.name %></td>
                      <td><%= property.description %></td>
                      <td><%= activity(property) %></td>
                      <td><%= link_to fa_icon('eye'), property, class: 'btn btn-sm btn-outline-info' %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

</div>