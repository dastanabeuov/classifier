<div class="index">
  <div class="card mt-4">
    <div class="card-block">
      <h1 class="card-header text-center">Properties</h1>
      <div class="card-body">
        <div class="row justify-content-md-center">
          <div class="col-md-12">

            <table class="table table-bordered table-striped table-responsive table-light">
              <thead>
                <tr>
                  <th>Propertyable</th>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Activity</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @properties.each do |property| %>
                  <tr>
                    <td><%= truncate("#{property.propertyable_type}", :length => 20) %></td>
                    <td><%= truncate("#{property.name}", :length => 20) %></td>
                    <td><%= truncate("#{property.description}", :length => 20) %></td>
                    <td><%= activity(property) %></td>
                    <td><%= link_to fa_icon('eye'), property, class: 'btn btn-sm btn-outline-info' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

          </div>
        </div>
      </div>
    </div>
  </div>

</div>