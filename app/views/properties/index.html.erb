<div class="name-container name-pale-blue name-leftbar">
  <h1>Properties</h1>
</div>

<br>

<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Synonym</th>
        <th>Code</th>
        <th>Version date</th>
        <th>Publish</th>
        <th>Position</th>
        <th>Ancestry</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @properties.each do |property| %>
        <tr>
          <td><%= property.name %></td>
          <td><%= property.description %></td>
          <td><%= property.synonym %></td>
          <td><%= property.code %></td>
          <td><%= property.version_date %></td>
          <td><%= property.publish %></td>
          <td><%= property.position %></td>
          <td><%= property.ancestry %></td>
          <td><%= link_to (octicon 'eye'), property, class: 'btn btn-sm btn-outline-info' %></td>
          <td><%= link_to (octicon 'pencil'), edit_property_path(property), class: 'btn btn-sm btn-outline-warning' %></td>
          <td><%= link_to (octicon 'trashcan'), property, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Property', new_property_path, class: 'btn btn-sm btn-outline-primary' %>
