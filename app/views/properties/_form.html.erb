<div class="card">
  <div class="card-body">
    <div class="form-group">
      <%= form_for(property) do |f| %>

        <%= render 'layouts/errors', resource: property %>

        <div class="field mt-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="field mt-3">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>

        <div class="field mt-3">
          <%= f.label :activity_id %>
          <%= f.select :activity_id, Activity.order(:id).collect {|p| [ p.name, p.id ] }, { include_blank: true } %>
        </div>

        <div class="actions">
          <%= f.submit class: "btn btn-sm btn-outline-primary mt-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
