<div class="name-container name-pale-blue name-leftbar">
  <h1>Xclasses</h1>
</div>

<br>

<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Synonym</th>
        <th>Code</th>
        <th>Version date</th>
        <th>Publish</th>
        <th>User</th>
        <th>Xroot</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @xcategories.each do |xcategory| %>
        <tr>
          <td><%= xcategory.name %></td>
          <td><%= xcategory.description %></td>
          <td><%= xcategory.synonym %></td>
          <td><%= xcategory.code %></td>
          <td><%= xcategory.version_date %></td>
          <td><%= xcategory.publish %></td>
          <td><%= xcategory.user_id %></td>
          <td><%= xcategory.xroot_id %></td>
          <td><%= link_to (octicon 'eye'), xcategory, class: 'btn btn-sm btn-outline-info' %></td>
          <td><%= link_to (octicon 'pencil'), edit_xcategory_path(xcategory), class: 'btn btn-sm btn-outline-warning' %></td>
          <td><%= link_to (octicon 'trashcan'), xcategory, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Xcategory', new_xcategory_path, class: 'btn btn-sm btn-outline-primary' %>
