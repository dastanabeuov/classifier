<div class="index container">
  <div class="name-container name-pale-blue name-leftbar">
    <h1>Xcategories</h1>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Synonym</th>
          <th>Code</th>
          <th>Version date</th>
          <th>Publish</th>
          <th>Xroot</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @xcategories.each do |xcategory| %>
          <tr>
            <td><%= xcategory.name %></td>
            <td><%= xcategory.description %></td>
            <td><%= xcategory.synonym %></td>
            <td><%= xcategory.code %></td>
            <td><%= xcategory.version_date %></td>
            <td><%= xcategory.publish %></td>
            <td><%= xcategory.xroot.name %></td>
            <td><%= link_to (octicon 'eye'), xroot_xcategory_path(xcategory), class: 'btn btn-sm btn-outline-secondary' %></td>
            <% if current_user.author_of?(xcategory) %>
              <td><%= link_to 'Edit', edit_xroot_xcategory_path(xcategory) %></td>
              <td><%= link_to 'Delete', xcategory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>