<div class="form-group">
  <%= form_for [@xcategory.xroot, @xcategory, xclass] do |f| %>
    <%= render 'layouts/errors', resource: xclass %>

    <div class="field mt-3">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="field mt-3">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="field mt-3">
      <%= f.label :synonym %>
      <%= f.text_area :synonym, class: 'form-control' %>
    </div>

    <div class="field mt-3">
      <%= f.label :code %>
      <%= f.text_field :code, class: 'form-control' %>
    </div>

    <div class="field mt-3">
      <%= f.label :version_date %>
      <%= f.date_select :version_date, class: 'form-control' %>
    </div>

    <div class="field mt-3">
      <%= f.label :publish %>
      <%= f.check_box :publish, class: 'form-control' %>
    </div>

    <div class="field mt-3">
      <%= f.label :xtype %>
      <%= f.check_box :xtype, class: 'form-control' %>
    </div>

    <div class="field mt-3">
      <%= f.label :position %>
      <%= f.text_field :position, class: 'form-control' %>
    </div>

    <div class="field mt-3">
      <%= f.label :parent_id %>
      <%= f.select :parent_id, Xclass.order(:id).collect {|p| [ p.name, p.id ] }, { include_blank: true } %>
    </div>
    <hr>
    <div class="field mt-5">
      <%= f.fields_for :properties do |property| %>
        <%= render 'shared/property_fields', f: property %>
      <% end %>
      <p>
        <%= link_to_add_association fa_icon('plus'), f, :properties, partial: 'shared/property_fields', title: "Add property" %>
      </p>
    </div>

    <div class="actions">
      <%= f.submit class: "btn btn-sm btn-outline-success mt-5" %>
    </div>
  <% end %>
</div>