<div class="card">
  <div class="card-body">
    <div class="form-group">
      <%= form_for(xclass) do |f| %>

        <%= render 'layouts/errors', resource: xclass %>

        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :synonym %>
          <%= f.text_area :synonym, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :code %>
          <%= f.text_field :code, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :version_date %>
          <%= f.date_select :version_date, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :publish %>
          <%= f.check_box :publish, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :xtyples %>
          <%= f.check_box :xtyples, class: 'form-control' %>
        </div>  

        <div class="field">
          <%= f.label :user_id %>
          <%= f.number_field :user_id, value: "#{current_user.id}", class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :xcategory_id %>
          <%= f.collection_select :xcategory_id, Xcategory.all, :id, :name, prompt: true, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit class: "btn btn-sm btn-outline-primary mt-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
