<div class="index container">
  <div class="name-container name-pale-blue name-leftbar">
    <h1>Classes</h1>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Synonym</th>
          <th>Code</th>
          <th>Version date</th>
          <th>Publish</th>
          <th>Xtype</th>
          <th>Position</th>
          <th>Ancestry</th>      
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @xclasses.each do |xclass| %>
          <tr>
            <td><%= xclass.name %></td>
            <td><%= xclass.description %></td>
            <td><%= xclass.synonym %></td>
            <td><%= xclass.code %></td>
            <td><%= xclass.version_date %></td>
            <td><%= xclass.publish %></td>
            <td><%= xclass.xtype %></td>
            <td><%= xclass.position %></td>      
            <td><%= xclass.ancestry %></td>
            <td><%= link_to (octicon 'eye'), xclass, class: 'btn btn-sm btn-outline-secondary' %></td>
            <% if current_user.author_of?(xclass) %>
              <td><%= link_to (octicon 'pencil'), edit_xclass_path(xclass), class: 'btn btn-sm btn-outline-secondary' %></td>
              <td><%= link_to (octicon 'trashcan'), xclass, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-secondary' %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="btn-group">
    <%= link_to 'New Xclass', new_xclass_path, class: 'btn btn-sm btn-outline-primary' %>
  </div>
</div>