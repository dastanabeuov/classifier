<div class="index">
  <div class="card mt-4">
    <div class="card-block">
      <h1 class="card-header text-center">Xclasses</h1>
      <div class="card-body">
        <div class="row justify-content-md-center">
          <div class="col-md-12">

            <table class="table table-bordered table-striped table-responsive table-light">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Synonym</th>
                  <th>Code</th>
                  <th>Version date</th>
                  <th>Publish</th>
                  <th>Xtype</th>
                  <th>Position</th>
                  <th>Ancestry</th>      
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @xclasses.each do |xclass| %>
                  <tr>
                    <td><%= truncate("#{xclass.name}", :length => 20) %></td>
                    <td><%= truncate("#{xclass.description}", :length => 20) %></td>
                    <td><%= truncate("#{xclass.synonym}", :length => 20) %></td>
                    <td><%= xclass.code %></td>
                    <td><%= xclass.version_date %></td>
                    <td><%= xclass.publish %></td>
                    <td><%= xclass.xtype %></td>
                    <td><%= xclass.position %></td>      
                    <td><span class="badge badge-info badge-pill"><%= xclass.ancestry %></span></td>
                    <td><%= link_to fa_icon('eye'),  xroot_xcategory_xclass_path(xclass.xcategory.xroot, xclass.xcategory, xclass), class: 'btn btn-sm btn-outline-info' %></td>
                    <% if current_user.author_of?(xclass) %>
                      <td><%= link_to fa_icon('pencil'), edit_xroot_xcategory_xclass_path(xclass.xcategory.xroot, xclass.xcategory, xclass), class: 'btn btn-sm btn-outline-warning' %></td>
                      <td><%= link_to fa_icon('trash'), xroot_xcategory_xclass_path(xclass.xcategory.xroot, xclass.xcategory, xclass), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %></td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            </table>

          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="btn-group mt-5">
    <%= link_to fa_icon('file'), new_xroot_xcategory_xclass_path, class: 'btn btn-sm btn-outline-success' %>
  </div>
</div>