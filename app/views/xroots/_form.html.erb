<div class="card">
  <div class="card-body">
    <div class="form-group">
      <%= form_for(xroot) do |f| %>

        <%= render 'layouts/errors', resource: xroot %>

        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :synonym %>
          <%= f.text_area :synonym, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :code %>
          <%= f.text_field :code, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :version_date %>
          <%= f.date_select :version_date, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :publish %>
          <%= f.check_box :publish, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :parent_id %><br />
          <%= f.collection_select :parent_id, Xroot.order(:name), :id, :name, include_blank: true, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit class: "btn btn-sm btn-outline-primary mt-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
