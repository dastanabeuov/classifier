<div class="name-container name-pale-blue name-leftbar">
  <h1>Xroots</h1>
</div>

<br>

<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Synonym</th>
        <th>Code</th>
        <th>Version date</th>
        <th>Publish</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @xroots.each do |xroot| %>
        <tr>
          <td><%= xroot.name %></td>
          <td><%= xroot.description %></td>
          <td><%= xroot.synonym %></td>
          <td><%= xroot.code %></td>
          <td><%= xroot.version_date %></td>
          <td><%= xroot.publish %></td>
          <td><%= xroot.user_id %></td>
          <td><%= link_to (octicon 'eye'), xroot, class: 'btn btn-sm btn-outline-info' %></td>
          <td><%= link_to (octicon 'pencil'), edit_xroot_path(xroot), class: 'btn btn-sm btn-outline-warning' %></td>
          <td><%= link_to (octicon 'trashcan'), xroot, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Xroot', new_xroot_path, class: 'btn btn-sm btn-outline-primary' %>