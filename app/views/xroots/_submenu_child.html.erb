<% child.children.each do |child| %>
  <li data-toggle="collapse" data-target="#child-<%= child.id %>" class="collapsed">
    <% if child.children? %>
      <i class="fa fa-folder fa-lg"></i>
    <% else %>
      <i class="fa fa-file fa-lg"></i>
    <% end %>
    
    <%= child.code %> <%= link_to_unless_current truncate(child.name, :length => 18), xroot_xcategory_xclass_path(child.xcategory.xroot, child.xcategory, child) %>
    
    <% if child.children? %>
      <span class="arrow"></span>
    <% end %>
  </li>

  <% if child.children.present? %>
    <ul class="sub-menu collapse pl-2" id="child-<%= child.id %>">
      <%= render 'submenu_child', child: child if child.children.present? %>
    </ul>
  <% end %>
<% end %>
