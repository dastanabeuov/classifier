  <div class="col-md-4">
    <p><a class="btn btn-secondary" href="<%= front_pages_help_path %>" role="button"><%= t('front_pages.help') %> &raquo;</a></p>
  </div>
  <div class="col-md-4">
    <p><a class="btn btn-secondary" href="<%= front_pages_service_path %>" role="button"><%= t('front_pages.service') %> &raquo;</a></p>
