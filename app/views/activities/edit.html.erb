<div class="edit">

  <div class="row justify-content-center">
    <div class="col-xl-12 col-sm-12 col-md-12">
      <div class="card">
        <div class="card-block">
          <h1 class="card-header text-center">Editing Activity</h1>
          <div class="card-body">
            <div class="row justify-content-md-center">
              <div class="col-md-12">

                <%= render 'form', activity: activity %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="btn-group mt-5">
    <%= link_to (octicon 'eye'), @activity, class: 'btn btn-sm btn-outline-info' %>
    <%= link_to (octicon 'arrow-left'), activities_path, class: 'btn btn-sm btn-outline-secondary' %>
  </div>
</div>