.edit

  .row.justify-content-center
    .col-xl-8.col-sm-8.col-md-8
      .card
        .card-block
          h1.card-header.text-center
            = t('form.edit')
          .card-body
            .row.justify-content-md-center
              .col-md-8

                = render 'form', activity: @activity

      .btn-group.mt-3
        = link_to icon('eye'), @activity, class: 'btn btn-sm btn-outline-info'
        = link_to icon('arrow-left'), activities_path, class: 'btn btn-sm btn-outline-secondary'
