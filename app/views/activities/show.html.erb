<div class="show">
  <div class="name-container name-pale-blue name-leftbar mb-2">
    <h1>Show Activity</h1>
  </div>

  <div class="show-form">
    <ul class="list-group">
      <li class="list-group-item"><strong>Name:</strong> <%= activity.name %></li>
      <li class="list-group-item"><strong>Description:</strong> <%= activity.description %></li>
      <li class="list-group-item"><strong>Synonym:</strong> <%= activity.synonym %></li>
      <li class="list-group-item"><strong>Code:</strong> <%= activity.code %></li>
      <li class="list-group-item"><strong>Version date:</strong> <%= activity.version_date %></li>
      <li class="list-group-item"><strong>Publish:</strong> <%= activity.publish %></li>
      <li class="list-group-item"><strong>Position:</strong> <%= activity.position %></li>    
      <li class="list-group-item"><strong>Ancestry:</strong> <%= activity.ancestry %></li>
      <li class="list-group-item"><strong>Children:</strong> <%= activity.has_children? %></li>
      <li class="list-group-item">
        <strong>Children: <% if current_user.author_of?(activity) %><%= link_to 'add new child', new_activity_path(parent_id: activity.id), class: "btn btn-sm btn-outline-success" %><% end %></strong>
        <ul class="items list-group mt-3 mb-3">
          <% activity.children.each do |child| %>
            <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
              <%= link_to truncate("#{child.name}", :length => 30), activity_path(child) %>
                <small title="Date of creation"><%= child.created_at %></small>
                <span class="badge badge-secondary badge-pill" title="Children">
                  <%= child.children.size %>
                </span>
                <% if current_user.author_of?(child) %>
                  <%= link_to (octicon 'trashcan'), activity_path(child), method: :delete, data: { confirm: 'Are you sure?' }, title: 'Delete' %>
                <% end %>
            </li>
          <% end %>
        </ul>
      </li>
    </ul>
  </div>

  <div class="btn-group">
    <% if current_user.author_of?(activity) %>
      <%= link_to 'Edit', edit_activity_path(activity), class: 'btn btn-sm btn-outline-secondary' %>
    <% end %>

    <% if activity.is_root? %>
      <%= link_to 'Back', activities_path, class: 'btn btn-sm btn-outline-secondary' %>
    <% else %>
      <%= link_to 'Back', activity_path(activity.parent), class: 'btn btn-sm btn-outline-secondary' %>
    <% end %>
  </div>
</div>